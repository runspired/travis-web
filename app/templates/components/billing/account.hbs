{{#if accounts.fetchSubscriptions.isRunning}}
  <LoadingIndicator/>
{{else}}
  <section class="billing">
    {{#if this.isEducation}}
      <Billing::Education 
        @newSubscription={{this.newSubscription}}
        @account={{this.account}} 
        @plans={{plans}}
        @coupon={{this.coupon}}
      />
    {{/if}}
    {{#if this.isManual}}
      <BillingManual @subscription={{this.subscription}} />
    {{/if}}
    {{#if this.isManaged}}
      <Billing::Subscription
        @newSubscription={{this.newSubscription}}
        @account={{this.account}}
        @coupon={{this.coupon}}
      />
    {{/if}}
    {{#if this.isTrial}}
      <Billing::Trial 
        @account={{this.account}} 
        @newSubscription={{this.newSubscription}}
        @coupon={{this.coupon}}
      />
    {{/if}}
  </section>
  {{#if this.invoices}}
    <Billing::Invoices 
      @invoices={{this.invoices}} 
      @subscription={{this.subscription}}
    />
  {{/if}}
{{/if}}
